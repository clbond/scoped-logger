{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "sourceRoot": "tsconfig",
    "rootDir": "modules",
    "outDir": "build",
    "declaration": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
